{
  "name": "react-redux-saga-ts-vite-boilerplate",
  "version": "0.0.4",
  "scripts": {
    "dev": "npm run start",
    "start": "npm run build:css && concurrently \"npm run watch:css\" \"vite\"",
    "watch:css": "npx tailwindcss -i ./src/index.css -o ./src/styles.css --watch",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./src/styles.css",
    "build": "tsc && npm run build:css && vite build",
    "preview": "vite preview",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint --fix",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(ts|tsx|json)\"",
    "test": "jest",
    "release": "standard-version",
    "commit": "git-cz",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-oauth/google": "^0.12.1",
    "@tanstack/react-query": "^5.32.0",
    "@tanstack/react-query-devtools": "^5.32.0",
    "axios": "^1.6.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "globals": "^15.0.0",
    "google-auth-library": "^9.9.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.373.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.3",
    "react-icons": "^5.1.0",
    "react-router": "^6.23.0",
    "react-router-dom": "^6.23.0",
    "react-toastify": "^10.0.5",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "vite-tsconfig-paths": "^4.3.2",
    "yup": "^1.4.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.1.1",
    "@types/jest": "^29.5.12",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1",
    "vite": "^5.2.10",
    "vite-plugin-pwa": "^0.19.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akhil-neoito/react-query-zustand-ts-vite-boilerplate.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
